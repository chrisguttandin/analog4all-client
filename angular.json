{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "newProjectRoot": "projects",
    "projects": {
        "analog4all-client": {
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:application",
                    "configurations": {
                        "development": {
                            "extractLicenses": false,
                            "namedChunks": true,
                            "optimization": false,
                            "sourceMap": true
                        },
                        "production": {
                            "budgets": [
                                {
                                    "maximumError": "1mb",
                                    "maximumWarning": "500kb",
                                    "type": "initial"
                                },
                                {
                                    "maximumError": "4kb",
                                    "maximumWarning": "2kb",
                                    "type": "anyComponentStyle"
                                }
                            ],
                            "fileReplacements": [
                                {
                                    "replace": "src/environments/environment.ts",
                                    "with": "src/environments/environment.prod.ts"
                                }
                            ],
                            "outputHashing": "all",
                            "sourceMap": {
                                "hidden": true,
                                "scripts": true,
                                "styles": false
                            }
                        }
                    },
                    "defaultConfiguration": "production",
                    "options": {
                        "assets": ["src/favicon.ico", "src/assets"],
                        "browser": "src/main.ts",
                        "i18nMissingTranslation": "error",
                        "index": "src/index.html",
                        "outputPath": "build/analog4all-client",
                        "polyfills": ["zone.js"],
                        "scripts": [],
                        "serviceWorker": "src/ngsw-config.json",
                        "styles": ["src/styles/styles.scss"],
                        "tsConfig": "src/tsconfig.json"
                    }
                },
                "extract-i18n": {
                    "builder": "@angular-devkit/build-angular:extract-i18n",
                    "options": {
                        "buildTarget": "analog4all-client:build"
                    }
                },
                "lint": {
                    "builder": "@angular-eslint/builder:lint",
                    "configurations": {
                        "test": {
                            "eslintConfig": "config/eslint/test.json",
                            "lintFilePatterns": ["test/**/*.html", "test/**/*.ts"]
                        }
                    },
                    "options": {
                        "eslintConfig": "config/eslint/src.json",
                        "lintFilePatterns": ["src/**/*.html", "src/**/*.ts"]
                    }
                },
                "serve": {
                    "builder": "@angular-devkit/build-angular:dev-server",
                    "configurations": {
                        "development": {
                            "buildTarget": "analog4all-client:build:development"
                        },
                        "production": {
                            "buildTarget": "analog4all-client:build:production"
                        }
                    },
                    "defaultConfiguration": "development",
                    "options": {
                        "port": 6699
                    }
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "assets": ["src/favicon.ico", "src/assets"],
                        "include": ["../test/unit/**/*.ts"],
                        "karmaConfig": "config/karma/config.js",
                        "polyfills": ["zone.js", "zone.js/testing"],
                        "scripts": [],
                        "tsConfig": "test/unit/tsconfig.json"
                    }
                }
            },
            "prefix": "anc",
            "projectType": "application",
            "root": "",
            "schematics": {},
            "sourceRoot": "src"
        }
    },
    "schematics": {
        "@schematics/angular:application": {
            "strict": true
        },
        "@schematics/angular:class": {
            "skipTests": true
        },
        "@schematics/angular:component": {
            "changeDetection": "OnPush",
            "inlineStyle": false,
            "inlineTemplate": false,
            "prefix": "anc",
            "skipTests": true,
            "style": "scss"
        },
        "@schematics/angular:directive": {
            "prefix": "anc",
            "skipTests": true
        },
        "@schematics/angular:interface": {
            "prefix": "I"
        },
        "@schematics/angular:module": {
            "skipTests": true
        },
        "@schematics/angular:pipe": {
            "skipTests": true
        },
        "@schematics/angular:service": {
            "skipTests": true
        }
    },
    "version": 1
}
